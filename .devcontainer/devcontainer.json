{
  "name": "OkArthur (Python 3.12)",
  "build": { "dockerfile": "Dockerfile" },
  "postCreateCommand": "pip install -U pip && pip install -r requirements-dev.txt && pre-commit install",
  "customizations": {
    "vscode": {
      "settings": {
        "files.eol": "\n",
        "editor.formatOnSave": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "editorconfig.editorconfig"
      ]
    }
  }
}
